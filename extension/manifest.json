{
	"name": "Refined Wikipedia",
	"version": "0.1.0",
	"description": "Enforces the mobile web version of Wikipedia and improves its interface",
	"homepage_url": "https://github.com/ismamz/refined-wikipedia",
	"manifest_version": 2,
	"minimum_chrome_version": "50",
	"permissions": [
		"webRequest",
		"webRequestBlocking",
		"storage",
		"https://wikipedia.org/*",
		"https://*.wikipedia.org/*"
	],
	"background": {
		"scripts": [
			"background.js"
		]
	},
	"icons": {
		"128": "icon.png"
	},
	"content_scripts": [
		{
			"run_at": "document_start",
			"matches": [
				"https://m.wikipedia.org/*",
				"https://*.m.wikipedia.org/*"
			],
			"css": [
				"content.css",
				"dark-mode.css"
			],
			"js": [
				"vendor/mousetrap.js",
				"vendor/mousetrap-global-bind.js",
				"content.js"
			]
		}
	]
}
